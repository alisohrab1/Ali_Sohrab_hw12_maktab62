<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

    <title>Document</title>
  </head>
  <body>
    <h1>Admin Panel</h1>
    <table class="table" id="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">username</th>
            <th scope="col">email</th>
            <th scope="col">password</th>
            <th scope="col">gender</th>
            <th scope="col">isloggedin</th>
            <th scope="col">role</th>
            <th scope="col">edit</th>
          </tr>
        </thead>
        <tbody>
            <% for (var i = 0; i < data.length; i++) { %>
              <% if(data[i].username === 'admin'){continue;}  %> 
          <tr style="cursor: pointer;" id=" <%= i+1  %>">
            <th scope="row"> <%= i+1  %> </th>
            <td id="tableUsername<%= i+1 %>"><%= data[i].username %></td>
            <td><%= data[i].email %></td>
            <td id="tablePassword<%= i+1 %>"><%= data[i].password %></td>
            <td><%= data[i].gender %></td>
            <td><%= data[i].isLoggedIn %></td>
            <td><%= data[i].role %></td>
            <td><button data-bs-toggle="modal" data-bs-target="#modal<%= i+1 %>" >edit</button></td>
          </tr>
          <% } %>
          
        </tbody>
      </table>

      <% for (var i = 0; i < data.length; i++) { %>

        <div class="modal fade" id="modal<%= i+1 %>" tabindex="-1" role="dialog" aria-labelledby="<%= i+1 %>" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Edit profile</h5>
                  <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <label for="">username:</label><br>
                  <input class="mt-1" type="text" name="modalUsername" id="modalUsername<%= i+1 %>" value=<%= data[i].username %>> <br>
                  <label for="">email:</label><br>
                  <input class="mt-1" type="text" name="modalEmail" id="modalEmail<%= i+1 %>" value=<%= data[i].email %>> <br>
                  <label for="">gender:</label><br>
                  <select class="mt-1" name="modalGender" id="modalGender<%= i+1 %>" value=<%= data[i].gender %>>
                    <option value="female">Female</option>
                    <option value="male">Male</option>
                    <option value="other">Rather Not Say</option>
                  </select>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-danger delBtn" id="delBtn<%= i+1 %>"  value="<%= i+1 %>">Delete User</button>
                  <button type="button" class="btn btn-primary saveBtn" id="saveBtn<%= i+1 %>"  value="<%= i+1 %>">Save changes</button>
                  
                </div>
              </div>
            </div>
          </div>

        <% } %>

    <!-- modal for editing -->
 
  </body>
  <script src="/script/panelInputs.js"></script>
  <script src="/script/panel.js"></script>

</html>
